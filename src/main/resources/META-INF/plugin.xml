<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>Template</name>
    <vendor>JetBrains</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="topicMigrations" anchor="right" secondary="true" factoryClass="org.jetbrains.plugins.template.MyToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="CheckMigrations" text="Check for Migrations" class="org.jetbrains.plugins.template.CheckMigrationsAction">
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="control A" second-keystroke="A" remove="true"/>
        </action>
    </actions>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>
</idea-plugin>
